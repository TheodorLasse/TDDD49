<Window x:Class="MyDemo.View.GameBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyDemo.View"
        mc:Ignorable="d"
        Title="GameBoard" Height="400" Width="400">
    <Grid Width="400" Margin="0,0,0,-6">
        <TextBox Text="{Binding Path=MyText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Height="320" TextWrapping="Wrap"  VerticalAlignment="Top" Width="350" Margin="0,29,0,0" Background="{DynamicResource {x:Static SystemColors.MenuBrushKey}}"  >
            <TextBox.InputBindings>
                <KeyBinding Command="{Binding Path=EnterCommand}" Key="Enter" />
            </TextBox.InputBindings>
        </TextBox>
    </Grid>
</Window>
